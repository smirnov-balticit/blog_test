<div class="posts">
  <h3 class="post"> <%= link_to post.ptitle,post %> </h3>
  <p><%=post.content%></p>
  <h2 class="post"> by <%= link_to  post.writer.name, post.writer %>
    <%= time_ago_in_words(post.created_at) %>   ago
    <% post.tags.each do |tag| %>
        <li><%= link_to tag.name, { :action => :index, :tag_name => tag.name } %></li>
    <%end%>
  </h2>
</div>

<% if current_user?(@user) %>
    <%= button_to "delete", post, :method => :delete,
                  :confirm => "You sure?",
                  :title =>post.ptitle %>
<% end %>
