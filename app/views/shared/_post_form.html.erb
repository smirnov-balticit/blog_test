<%= form_for @post do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label 'title' %><br />
    <%= f.text_field :ptitle %>
  </div>
  <div class="field">
    <%= f.label 'content' %><br />
    <%= f.text_area :content %>
  </div>
    <div class="field">
      <%= f.label 'tags' %><br />
      <%= f.text_field :tag_list %>
    </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %> 